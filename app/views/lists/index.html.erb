<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),url(<%= asset_url("movie_theater.png")%>);">
  <div class="container">
    <h1 class="text-center">Your <strong>Best</strong> Movie <strong>Lists</strong>!</h1>

  </div>
</div>

<div class="d-flex justify-content-between mt-5 mx-3">
  <h2>My Lists</h2>
  <%= link_to "Start now", new_list_path, class: "btn btn-flat" %>

</div>

<div class="cards mt-3">
  <% @lists.each do |list| %>
    <div class="card-category mx-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <%= link_to list.name, list_path(list.id), class: "text-decoration-none" %>
    </div>
  <% end %>
</div>
