<h1><%= @list.name %></h1>

<%= link_to "Delete",
  list_path(@list),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<% @list.movies.each do |movie| %>
  <li class="list-group-item"><%= movie.title %>
  <p><%= movie.overview %></p>
  <%= image_tag(movie.poster_url) %>
  </li>
<% end %>

<%= link_to "Create Bookmark", new_list_bookmark_path(@list) %>
<br>

<p><strong>Bookmarks</strong></p>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item">
    <%= bookmark.comment %>
    <%= link_to "Delete",
    bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>
